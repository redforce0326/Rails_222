<div class="container sign">
 <div class="sign-flame">
  <p class="sign-title">ログイン</p>
<div class="sign-inner">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <div class="field-icon"></div>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder =>"メールアドレス"%>
  </div>

  <div class="field">
    <div class="field-icon"></div>
    <%= f.password_field :password, autocomplete: "current-password",:placeholder =>"パスワード"%>
  </div>
  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>
</div>
<div class="other-sign">
<a href="/users/sign_up" class="other-sign-link">新しいアカウントを作成する</a>
</div>
<%= render "devise/shared/links" %>
</div>
</div>